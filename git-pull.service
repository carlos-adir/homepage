[Unit]
Description=Git repository pull on boot
After=network.target
StartLimitIntervalSec=300
StartLimitBurst=3

[Service]
Type=oneshot
WorkingDirectory=/home/pi/git/homepage
ExecStart=/usr/bin/git pull
Restart=on-failure
RestartSec=300 # Wait 5 minutes between retries

[Install]
WantedBy=default.target
