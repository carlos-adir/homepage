[Unit]
Description=Makefile start service
After=git-pull.service
StartLimitIntervalSec=300
StartLimitBurst=3

[Service]
Type=oneshot
WorkingDirectory=/home/pi/git/homepage
ExecStart=/usr/bin/make start
Restart=on-failure
RestartSec=300 # Wait 5 minutes between retries

[Install]
WantedBy=default.target
